// style — flow-os
// Stili CSS-in-Flow nativi — disponibile senza import

@native("flow_style_create")
fn style(props: StyleProps): Style

@native("flow_style_merge")
fn merge(a: Style, b: Style): Style

@native("flow_style_cx")
fn cx(styles: Style[]): Style

type StyleProps {
    // Layout
    padding?:   int | EdgeInsets
    margin?:    int | EdgeInsets
    gap?:       int
    width?:     int | str
    height?:    int | str
    flex?:      int
    direction?: "row" | "column"
    align?:     "start" | "center" | "end" | "stretch"
    justify?:   "start" | "center" | "end" | "between" | "around"

    // Colori
    bg?:        str
    color?:     str
    opacity?:   float

    // Bordi
    radius?:    int | EdgeInsets
    border?:    BorderProps

    // Testo
    size?:      int
    weight?:    "normal" | "medium" | "bold"
    align?:     "left" | "center" | "right"

    // Stato
    hover?:     StyleProps
    active?:    StyleProps
    focus?:     StyleProps
    disabled?:  StyleProps
}

// Uso:
//   style({ padding: 24, bg: "#fff", radius: 8 })
//   style({ hover: { bg: "#f0f0f0" } })
