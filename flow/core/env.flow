// Legge una variabile d'ambiente. Lancia errore se non esiste.
@native("flow_env_get")
fn env(key: str): str

// Legge una variabile d'ambiente con fallback.
@native("flow_env_get_or")
fn envOr(key: str, fallback: str): str

// Controlla se una variabile d'ambiente esiste.
@native("flow_env_has")
fn envHas(key: str): bool

