{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Flow",
    "scopeName": "source.flow",
    "fileTypes": ["flow"],
    "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#decorators" },
        { "include": "#keywords" },
        { "include": "#builtin-types" },
        { "include": "#literals" },
        { "include": "#functions" },
        { "include": "#components" },
        { "include": "#types-decl" },
        { "include": "#operators" },
        { "include": "#numbers" },
        { "include": "#punctuation" }
    ],
    "repository": {

        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.flow",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.flow",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "beginCaptures": { "0": { "name": "punctuation.definition.comment.flow" } },
                    "endCaptures":   { "0": { "name": "punctuation.definition.comment.flow" } }
                }
            ]
        },

        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.flow",
                    "begin": "\"",
                    "end": "\"",
                    "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.flow" } },
                    "endCaptures":   { "0": { "name": "punctuation.definition.string.end.flow" } },
                    "patterns": [
                        {
                            "name": "constant.character.escape.flow",
                            "match": "\\\\[nrt\\\\\"0]"
                        },
                        {
                            "name": "meta.interpolation.flow",
                            "begin": "\\{",
                            "end": "\\}",
                            "beginCaptures": { "0": { "name": "punctuation.section.interpolation.begin.flow" } },
                            "endCaptures":   { "0": { "name": "punctuation.section.interpolation.end.flow" } },
                            "patterns": [{ "include": "$self" }]
                        }
                    ]
                },
                {
                    "name": "string.quoted.backtick.flow",
                    "begin": "`",
                    "end": "`",
                    "patterns": [
                        {
                            "name": "meta.interpolation.flow",
                            "begin": "\\{",
                            "end": "\\}",
                            "patterns": [{ "include": "$self" }]
                        }
                    ]
                }
            ]
        },

        "decorators": {
            "patterns": [
                {
                    "name": "meta.decorator.flow",
                    "match": "@(client|server|native|test|route|middleware|watch)\\b",
                    "captures": { "0": { "name": "entity.name.tag.decorator.flow" } }
                },
                {
                    "name": "meta.decorator.flow",
                    "begin": "@native\\s*\\(",
                    "end": "\\)",
                    "beginCaptures": { "0": { "name": "entity.name.tag.decorator.flow" } },
                    "endCaptures":   { "0": { "name": "entity.name.tag.decorator.flow" } },
                    "patterns": [{ "include": "#strings" }]
                },
                {
                    "name": "entity.name.tag.decorator.flow",
                    "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },

        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.flow",
                    "match": "\\b(if|else|for|while|loop|break|continue|return|match|in|as)\\b"
                },
                {
                    "name": "keyword.declaration.flow",
                    "match": "\\b(fn|let|var|const|type|enum|import|export|async|await|new|struct)\\b"
                },
                {
                    "name": "keyword.other.flow",
                    "match": "\\b(component|and|or|not|is|try|catch|throw|defer)\\b"
                },
                {
                    "name": "constant.language.flow",
                    "match": "\\b(true|false|null|none|some)\\b"
                },
                {
                    "name": "support.function.builtin.flow",
                    "match": "\\b(print|eprint|dbg|panic|assert|todo|unreachable)\\b"
                }
            ]
        },

        "builtin-types": {
            "name": "support.type.primitive.flow",
            "match": "\\b(int|float|bool|str|byte|rune|any|void|never|ptr|Result|Option|BTree|Iter|PeekIter|map)\\b"
        },

        "literals": {
            "patterns": [
                {
                    "name": "constant.language.boolean.flow",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "constant.language.null.flow",
                    "match": "\\bnull\\b"
                }
            ]
        },

        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.flow",
                    "match": "0[xX][0-9a-fA-F_]+"
                },
                {
                    "name": "constant.numeric.binary.flow",
                    "match": "0[bB][01_]+"
                },
                {
                    "name": "constant.numeric.octal.flow",
                    "match": "0[oO][0-7_]+"
                },
                {
                    "name": "constant.numeric.float.flow",
                    "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.flow",
                    "match": "\\b[0-9][0-9_]*\\b"
                }
            ]
        },

        "functions": {
            "patterns": [
                {
                    "name": "meta.function.flow",
                    "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
                    "captures": {
                        "1": { "name": "keyword.declaration.flow" },
                        "2": { "name": "entity.name.function.flow" }
                    }
                },
                {
                    "name": "meta.function.async.flow",
                    "match": "\\b(async)\\s+(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
                    "captures": {
                        "1": { "name": "keyword.declaration.flow" },
                        "2": { "name": "keyword.declaration.flow" },
                        "3": { "name": "entity.name.function.flow" }
                    }
                },
                {
                    "name": "variable.function.call.flow",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
                    "captures": {
                        "1": { "name": "entity.name.function.call.flow" }
                    }
                }
            ]
        },

        "components": {
            "name": "meta.component.flow",
            "match": "\\b(component)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
            "captures": {
                "1": { "name": "keyword.other.flow" },
                "2": { "name": "entity.name.class.component.flow" }
            }
        },

        "types-decl": {
            "patterns": [
                {
                    "name": "meta.type.flow",
                    "match": "\\b(type|enum)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
                    "captures": {
                        "1": { "name": "keyword.declaration.flow" },
                        "2": { "name": "entity.name.type.flow" }
                    }
                },
                {
                    "name": "entity.name.type.ref.flow",
                    "match": "(?<=[:\\[\\(,\\s]|->)\\s*([A-Z][a-zA-Z0-9_]*)\\b",
                    "captures": {
                        "1": { "name": "entity.name.type.flow" }
                    }
                }
            ]
        },

        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.flow",
                    "match": "->|=>"
                },
                {
                    "name": "keyword.operator.null.flow",
                    "match": "\\?\\?|\\?\\."
                },
                {
                    "name": "keyword.operator.logical.flow",
                    "match": "&&|\\|\\||!"
                },
                {
                    "name": "keyword.operator.comparison.flow",
                    "match": "==|!=|<=|>=|<|>"
                },
                {
                    "name": "keyword.operator.assignment.flow",
                    "match": "\\+=|-=|\\*=|/=|%=|="
                },
                {
                    "name": "keyword.operator.arithmetic.flow",
                    "match": "\\+|-|\\*|/|%"
                },
                {
                    "name": "keyword.operator.spread.flow",
                    "match": "\\.\\.\\.|\\.\\."
                },
                {
                    "name": "keyword.operator.try.flow",
                    "match": "\\?"
                }
            ]
        },

        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.separator.colon.flow",
                    "match": ":"
                },
                {
                    "name": "punctuation.separator.comma.flow",
                    "match": ","
                },
                {
                    "name": "punctuation.terminator.semicolon.flow",
                    "match": ";"
                }
            ]
        }
    }
}
